<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="adaptivex.pedidoscloud.ConfigActivity"
    tools:showIn="@layout/activity_config">
<LinearLayout
    android:layout_width="368dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="8dp">
    <TableLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:stretchColumns="0,1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/lblSyncStockPrecios"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sincronizar Stock y Precios:">
        </TextView>



        <ToggleButton
            android:id="@+id/toggleButtonStockPrecios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/lblSyncPedidos"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar Pedidos Automaticamente:">
        </TextView>


        <ToggleButton
            android:id="@+id/toggleButtonEnvioPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

    </TableRow>


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/lblSyncPedidosEntrega"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descargar Reparto Pedidos Para Entregar:">
        </TextView>

        <ToggleButton
            android:id="@+id/toggleButtonEntregaPedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/lblDescargarMemo"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descargar Recordatorio Compras x Cliente:">
        </TextView>

        <Button
            android:id="@+id/btnDescargarRecordatorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descargar"
             />

    </TableRow>


    </TableLayout>

</LinearLayout>

</android.support.constraint.ConstraintLayout>
