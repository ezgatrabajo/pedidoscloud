<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="adaptivex.pedidoscloud.View.Pruebas.DescargaImagenActivity"
    tools:showIn="@layout/activity_descarga_imagen">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        >

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limpiar Imagen"
            android:id="@+id/btnLimpiar"
            android:layout_below="@+id/btnCarga2"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imagen" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Descargar Imagenes de Productos"
            android:id="@+id/btnDescImgProductos"
            android:layout_below="@+id/btnLeer"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/btnLimpiar" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:text="Leer desde URL"
            android:id="@+id/btnLeer"
            android:layout_below="@+id/btnCarga2"
            android:layout_alignEnd="@+id/imagen"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:text="Cargar Desde Directorio Interno"
            android:id="@+id/btnCarga2"
            android:layout_below="@+id/btnGuardarImagen"
            android:layout_alignEnd="@+id/btnGuardarImagen"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar Imagen"
            android:id="@+id/btnGuardarImagen"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mostrar Imagen de TextView"
            android:id="@+id/btnMostrarImagen" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etNombreImagen"
            android:layout_alignBottom="@+id/imagen"
            android:layout_alignParentStart="true"
            android:hint="Ingresar el nombre de la Imagen"
            android:layout_alignEnd="@+id/btnDescImgProductos" />

        <ImageView
            android:id="@+id/imagen"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</RelativeLayout>
