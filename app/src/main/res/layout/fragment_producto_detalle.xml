<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adaptivex.pedidoscloud.View.Pedidodetalles.ListadoPedidoDetallesFragment"
    android:id="@+id/fragment_pedido_detalle">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">

        <TextView
            android:id="@+id/txtTitleProductoDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle del Producto"
            android:textStyle="italic"
            android:textAlignment="center" />


<!--
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/ivFpdImagen"
            android:layout_gravity="center"
            android:src="@drawable/icon_cliente" />
-->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="0,1"
            android:id="@+id/tableProductoDetalle"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Codigo:">
                </TextView>

                <TextView
                    android:id="@+id/tvFpdProductoId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Value"
                    android:layout_column="1">
                </TextView>
            </TableRow>


            <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblpdNombre"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre:">
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFpdNombre"
                    android:layout_column="1"
                    android:text="Nombre" />

            </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblpdDescripcion"
                android:layout_column="0"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion:">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFpdDescripcion"
                android:hint="Descripcionnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn"
                android:layout_column="1" />

        </TableRow>





            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblpdStock"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock:">
                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFpdStock"
                    android:hint="Stock"
                    android:layout_column="1"
                    />
            </TableRow>



            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblpdPrecio"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio: $">
                </TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFpdPrecio"
                    android:hint="Precio"
                    android:layout_column="1"
                    />
            </TableRow>




            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lblpdMonto"
                    android:layout_column="0"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monto: $">
                </TextView>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFpdMonto"
                    android:hint="Monto"
                    android:layout_column="1"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp"
                >
                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar al Pedido"
                    android:textAlignment="textStart"
                    android:id="@+id/btnFpdAgregar"
                    />
                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned"
                    android:ems="10"
                    android:id="@+id/etFpdCantidad"
                    android:hint="Ingresar Cantidad..."
                    android:textStyle="bold"
                    />


            </TableRow>

        </TableLayout>




    </LinearLayout>




</LinearLayout>
